<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeditationApp" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryVariant">@color/dark_mint</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint</item>
        <item name="colorSecondaryVariant">@color/dark_mint</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Font. -->
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <!-- Font Color -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashScreen" parent="Theme.MeditationApp">
        <item name="android:windowBackground">@drawable/splash_sreen</item>
    </style>
</resources>